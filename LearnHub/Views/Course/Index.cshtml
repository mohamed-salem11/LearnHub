@using Microsoft.AspNetCore.Identity
@using LearnHub.Models
@inject UserManager<ApplicationUser> UserManager
@model List<LearnHub.Models.Course>

@{
    ViewData["Title"] = "Courses";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2>Courses</h2>
        <a asp-action="Create" class="btn btn-success">+ Add New Course</a>
    </div>

    @if (Model == null || Model.Count == 0)
    {
        <div class="alert alert-info">
            No courses available yet.
        </div>
    }
    else
    {
        <div class="row">
            @foreach (var course in Model)
            {
                <div class="col-md-4 mb-4">
                    <div class="card h-100">

                        @* Link around image and title *@
                        <a asp-controller="Lesson" asp-action="LessonsByCourse" asp-route-id="@course.Id" style="text-decoration:none; color:inherit;">
                            <img src="@course.CoverImageUrl"
                                 class="card-img-top"
                                 alt="@course.Title"
                                 style="height: 200px; object-fit: cover;" />
                            <div class="card-body text-center">
                                <h5 class="card-title">@course.Title</h5>
                            </div>
                        </a>

                        <div class="card-body d-flex flex-column">
                            <p class="card-text text-muted small">
                                @course.Description.Substring(0, Math.Min(100, course.Description.Length))...
                            </p>

                            <div class="mb-2">
                                <span class="badge bg-primary">@course.Category?.Name</span>
                                @if (!course.IsApproved)
                                {
                                    <span class="badge bg-warning text-dark">Pending Approval</span>
                                }
                            </div>

                            <div class="mb-2">
                                <small class="text-muted">
                                    <i class="bi bi-person"></i> @course.ApplicationUser?.FullName
                                </small>
                            </div>

                            <div class="mb-2">
                                <span class="text-warning">
                                    @for (int i = 1; i <= 5; i++)
                                    {
                                        if (course.TotalVotes > 0 && i <= (course.TotalRating / course.TotalVotes))
                                        {
                                            <i class="bi bi-star-fill"></i>
                                        }
                                        else
                                        {
                                            <i class="bi bi-star"></i>
                                        }
                                    }
                                </span>
                                <small class="text-muted">
                                    @if (course.TotalVotes > 0)
                                    {
                                        <span>(@course.TotalRating / @course.TotalVotes - @course.TotalVotes votes)</span>
                                    }
                                    else
                                    {
                                        <span>(No ratings yet)</span>
                                    }
                                </small>
                            </div>

                            <div class="mb-2">
                                <strong class="text-success">@course.Price.ToString("C")</strong>
                                <small class="text-muted">| @course.NumberOfLearnears learners</small>
                            </div>

                            @* Buttons on same line *@
                            <div class="mt-auto d-flex justify-content-start flex-wrap gap-1">
                                <a asp-action="Details" asp-route-id="@course.Id" class="btn btn-primary btn-sm">View Details</a>

                                @if (UserManager.GetUserId(User) == course.ApplicationUserId)
                                {
                                    <a asp-controller="Lesson" asp-action="Create" asp-route-courseId="@course.Id" class="btn btn-success btn-sm">+ Add Lesson</a>
                                    <a asp-action="Edit" asp-route-id="@course.Id" class="btn btn-warning btn-sm">Edit</a>
                                    <a asp-action="Delete" asp-route-id="@course.Id" class="btn btn-danger btn-sm">Delete</a>
                                }
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
</div>
